<UserControl
    x:Class="VtuberMusic.App.Controls.Playing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VtuberMusic.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:VtuberMusic.App.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.DataContext>
            <viewmodels:PlayingViewModel x:Name="ViewModel"/>
        </Grid.DataContext>
        <Image Source="{x:Bind ViewModel.PlayingMusic.picUrl, Mode=OneWay}" Stretch="UniformToFill"/>
        <Button VerticalAlignment="Top" Content="Close" Click="{x:Bind Close_Click}"/>
    </Grid>
</UserControl>
