<Application
    x:Class="VtuberMusic_UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VtuberMusic_UWP">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Template/Common.xaml"/>
                <ResourceDictionary Source="/Template/Button.xaml"/>
                <ResourceDictionary Source="/Template/Silder.xaml"/>
                <ResourceDictionary Source="/Template/Icon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="/Theme/Light.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="/Theme/Dark.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
