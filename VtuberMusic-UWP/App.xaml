<Application
    x:Class="VtuberMusic_UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VtuberMusic_UWP"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <muxc:XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" ControlsResourcesVersion="Version2"/>
                <ResourceDictionary Source="/Template/Common.xaml"/>
                <ResourceDictionary Source="/Template/Button.xaml"/>
                <ResourceDictionary Source="/Template/Icon.xaml"/>
                <ResourceDictionary Source="/Template/LyricItem.xaml"/>
                <ResourceDictionary Source="/Template/Converter.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="/Theme/Light.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="/Theme/Dark.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
            
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
