            <StackPanel Orientation="Horizontal" IsHitTestVisible="False">
                <Image Source="/Assets/Icon/Original/Icon.png" Height="24" Stretch="UniformToFill" VerticalAlignment="Center"/>
                <TextBlock Text="VtuberMusic" VerticalAlignment="Center" FontSize="12" Margin="15 0 0 0"/>
                <TextBlock Text="Preview" VerticalAlignment="Center" FontSize="12" Margin="3 0 0 0" Foreground="{ThemeResource SystemBaseMediumColor}"/>
            </StackPanel>
            <AutoSuggestBox x:Name="SearchKeyword" Grid.Column="1" Margin="5 0"
                            VerticalAlignment="Center" PlaceholderText="搜索歌曲、歌手、歌单..."
                            QueryIcon="Find" QuerySubmitted="SearchKeyword_QuerySubmitted"/>
