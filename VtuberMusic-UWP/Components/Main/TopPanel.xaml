    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VtuberMusic_UWP.Components.Main"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:account="using:VtuberMusic_UWP.Components.Account"
    xmlns:player="using:VtuberMusic_UWP.Components.Player" xmlns:muxc="using:Microsoft.UI.Xaml.Controls" xmlns:components="using:VtuberMusic_UWP.Components"
    mc:Ignorable="d" Background="{x:Null}" Loaded="UserControl_Loaded"
    d:DesignHeight="48"
