<UserControl
    x:Class="VtuberMusic_UWP.Components.Dialog.CreateAlbumDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VtuberMusic_UWP.Components.Dialog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <TextBox x:Name="AlbumName" TextChanged="AlbumName_TextChanged" PlaceholderText="歌单名称"/>
        <CheckBox x:Name="IsPrivateAlbum" Margin="0 5 0 0" Content="是否为私密歌单"/>
    </StackPanel>
</UserControl>
