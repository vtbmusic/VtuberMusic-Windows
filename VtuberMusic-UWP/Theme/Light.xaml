<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ThemeColor">#f77850</Color>
    <SolidColorBrush x:Key="ThemeColorBrush" Color="{StaticResource ThemeColor}"/>
    <SolidColorBrush x:Key="Foreground" Color="Black"/>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource Foreground}"/>
    </Style>
</ResourceDictionary>
